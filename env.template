# Database Configuration
# For Neon pooler, use these connection parameters:
# - pgbouncer=true: Use pgbouncer mode for connection pooling
# - connection_limit=5: Limit connections per instance (adjust based on your Neon plan)
# - pool_timeout=20: Increase timeout from default 10 seconds
# - connect_timeout=10: Connection establishment timeout
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require&pgbouncer=true&connection_limit=5&pool_timeout=20&connect_timeout=10

# Cloudflare R2 Configuration
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_ACCESS_ID=your_access_id_here
CLOUDFLARE_ACCESS_KEY=your_access_key_here
CLOUDFLARE_BUCKET_NAME=your_bucket_name_here
CLOUDFLARE_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
CLOUDFLARE_R2_PUBLIC_URL=https://your_public_url.r2.dev

# API Configuration (optional)
NEXT_PUBLIC_API_URL=

# Pathao API Configuration
# Server-side (used by API routes)
PATHAO_BASE_URL=https://api-hermes.pathao.com
# Client-side (optional, if you want to use directly from client)
NEXT_PUBLIC_PATHAO_BASE_URL=https://api-hermes.pathao.com
NEXT_PUBLIC_PATHAO_CLIENT_ID=your_client_id_here
NEXT_PUBLIC_PATHAO_CLIENT_SECRET=your_client_secret_here
NEXT_PUBLIC_PATHAO_STORE_ID=your_store_id_here
